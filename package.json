{
  "name": "l10n-tools",
  "version": "4.3.1",
  "description": "Localization tools",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "swc src -d dist -s --strip-leading-paths",
    "watch": "swc -w src -d dist -s --strip-leading-paths",
    "schema": "typescript-json-schema --required --noExtraProps --strictNullChecks tsconfig.json L10nConf > l10nrc.schema.json",
    "tsc": "tsc --noEmit",
    "test": "node --no-warnings=ExperimentalWarning --loader ts-node/esm --test **/*.test.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run tsc && npm test"
  },
  "author": "Eungkyu Song <eungkyu@gmail.com>",
  "license": "MIT",
  "repository": "github:TPC-Internet/l10n-tools",
  "bin": {
    "l10n": "dist/l10n.js"
  },
  "dependencies": {
    "@lokalise/node-api": "^12.7.0",
    "ajv": "^8.17.1",
    "command-exists": "^1.2.9",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "fast-xml-parser": "^4.4.1",
    "gettext-parser": "^8.0.0",
    "glob": "^10.4.5",
    "google-auth-library": "^9.14.0",
    "googleapis": "^143.0.0",
    "he": "^1.2.0",
    "http-shutdown": "^1.2.2",
    "i18n-strings-files": "^2.0.0",
    "lodash-es": "^4.17.21",
    "node-html-parser": "^6.1.13",
    "npmlog": "^7.0.1",
    "open": "^10.1.0",
    "p-queue": "^8.0.1",
    "php-parser": "^3.1.5",
    "plist": "^3.1.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.21",
    "@types/command-exists": "^1.2.3",
    "@types/he": "^1.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.47",
    "@types/npmlog": "^7.0.0",
    "@types/plist": "^3.0.5",
    "chokidar": "^3.6.0",
    "expect": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript-json-schema": "^0.65.1"
  }
}
