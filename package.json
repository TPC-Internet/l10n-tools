{
  "name": "l10n-tools",
  "version": "4.6.0",
  "description": "Localization tools",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "tsc": "tsc --noEmit",
    "lint": "eslint",
    "test": "node --no-warnings=ExperimentalWarning --loader ts-node/esm --test **/*.test.ts",
    "build": "swc src -d dist -s --strip-leading-paths",
    "watch": "swc -w src -d dist -s --strip-leading-paths",
    "schema": "ts-json-schema-generator -p 'src/**/*.ts,@types/*.ts' -e all -t L10nConf --no-top-ref -o l10nrc.schema.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run tsc && npm run lint && npm test"
  },
  "author": "Eungkyu Song <eungkyu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpcint/l10n-tools.git"
  },
  "bin": {
    "l10n": "dist/l10n.js"
  },
  "dependencies": {
    "@lokalise/node-api": "^14.8.0",
    "ajv": "^8.17.1",
    "command-exists": "^1.2.9",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "domhandler": "^5.0.3",
    "domutils": "^3.2.2",
    "fast-xml-parser": "^5.2.3",
    "gettext-parser": "^8.0.0",
    "glob": "^10.4.5",
    "google-auth-library": "^10.1.0",
    "googleapis": "^150.0.1",
    "he": "^1.2.0",
    "htmlparser2": "^10.0.0",
    "http-shutdown": "^1.2.2",
    "i18n-strings-files": "^2.0.0",
    "lodash-es": "^4.17.21",
    "npmlog": "^7.0.1",
    "open": "^10.1.2",
    "p-queue": "^8.1.0",
    "php-parser": "^3.2.3",
    "plist": "^3.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@faker-js/faker": "^9.8.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.1",
    "@types/command-exists": "^1.2.3",
    "@types/gettext-parser": "^8.0.0",
    "@types/he": "^1.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.76",
    "@types/npmlog": "^7.0.0",
    "@types/plist": "^3.0.5",
    "@typescript-eslint/parser": "^8.34.0",
    "chokidar": "^4.0.3",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-import-x": "^4.15.2",
    "expect": "^29.7.0",
    "ts-json-schema-generator": "^2.4.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.34.0"
  }
}
