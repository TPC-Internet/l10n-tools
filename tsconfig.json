{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "sourceMap": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
  },
  "include": [
    "./src",
    "./@types"
  ]
}
